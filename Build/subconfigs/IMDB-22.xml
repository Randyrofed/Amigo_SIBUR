<pluginSettings>
	<allRestart>PT10S</allRestart>
	<!-- Накопитель ESS 02, шина BUS 01, IP: 127.0.0.1:1502 -->
	<!-- Тэг connectionHistory необходимо изменить, т.к. фактически выполняется опрос одного устройства (АСУТП). При этом в АСУТП есть регистр, отвечающий за статус связи с реальным регистром -->
	<device consequentOnly="false" ip="127.0.0.1" maxDataVolume="32" packRequests="true" pollingCycle="PT1S" port="1502" restartPeriod="PT5S">
		<connectionHistory>/energyStoragingUnit[MRID='_ESS_02']/connection/addResources/addResource[purposeKey='TMMM']</connectionHistory>
		<unit sequential="true" unitId="3" >
			<readFrom address="30096" byteOrder="WordSwapped" dataType="Integer" expectedMax="60000" expectedMin="-60000" path="/energyStoragingUnit[MRID='_ESS_02']/p/addResources/addResource[purposeKey='TMMM']" readType="HoldingRegister" scaleFactor="0.001"/>

			<readFrom address="30100" byteOrder="WordSwapped" dataType="Integer" expectedMax="60000" expectedMin="-60000" path="/energyStoragingUnit[MRID='_ESS_02']/e/addResources/addResource[purposeKey='TMMM']" readType="HoldingRegister" scaleFactor="0.001"/>

			<readFrom address="10096" byteOrder="Native" dataType="Byte" path="/energyStoragingUnit[MRID='_ESS_02']/operMode/addResources/addResource[purposeKey='TMMM']" readType="Coils"/>

			<!-- Уставка активной мощности -->
			<writeTo address="40096" dataType="Integer" path="/energyStoragingUnit[MRID='_ESS_02']/p" scaleFactor="1000" writeType="MultipleRegister"/>
		</unit>
	</device>
</pluginSettings>