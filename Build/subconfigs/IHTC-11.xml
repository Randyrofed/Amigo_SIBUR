	<!-- Запрос на прогноз -->
	<connection operationName="CLFC">
		<http connectingTimeout="PT2M" method="POST">
			<url>https://gao-dev.rnd.rtsoft.ru/forecast_model_solar</url>
		</http>
		<loader>
			<resource>/generatingUnit[MRID='_PVS_01']/p/addResources/addResource[purposeKey='TM1H']</resource>
			<startDate>P-3D</startDate>
			<endDate>PT-1M</endDate>
		</loader>
		<processingClass>ru.rtsoft.amigo.cloud.forecaster.ForecastServicePlugin</processingClass>
		<customConfig client_id="russian-island" path="/generatingUnit[MRID='_PVS_01']/p/addResources/addResource[purposeKey='FL24']" start="PT1H"/>
	</connection>

	<!-- Запрос ошибки прогнозирования -->
	<connection operationName="CLFE">
		<http method="POST">
			<url>https://gao-dev.rnd.rtsoft.ru/error_metrics/</url>
		</http>
		<processingClass>ru.rtsoft.amigo.cloud.statistics.StatisticsServicePlugin</processingClass>
		<customConfig align="true" archivePath="/generatingUnit[MRID='_PVS_01']/p/archives/archive[purposeKey='FL24']" deleteOld="true" end="now" resourcePath="/generatingUnit[MRID='_PVS_01']/p/addResources/addResource[purposeKey='TM1H']" start="P-1D" timeResolution="PT1H">
			<result param="rrmse" path="/generatingUnit[MRID='_PVS_01']/p/addResources/addResource[purposeKey='ER1D']"/>
		</customConfig>
	</connection>
</pluginSettings>